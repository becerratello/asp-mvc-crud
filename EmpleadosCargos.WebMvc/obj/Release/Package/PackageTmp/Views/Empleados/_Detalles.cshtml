@model EmpleadosCargos.Core.Empleado

<script type="text/javascript">
    $('#close').click(function () {
        $('#save-box').hide();
        $('.wrapper').removeClass('blur');
    });
</script>

<h2>Detalles del Empleado</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            Cargo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cargo.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cargo.Sueldo)
        </dt>

        <dd>
            $ @Html.DisplayFor(model => model.Cargo.Sueldo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>

    </dl>
    <a href="#" onClick="return false;" id="close" class="btn btn-default boton">Cancelar</a>
</div>
